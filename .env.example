# Backend API Configuration
BACKEND_URL=http://localhost:8000
API_VERSION=v1

# Environment
ENVIRONMENT=development

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# NGINX / Reverse Proxy Configuration (optional)
# Set BASE_URL_PATH when deploying behind a reverse proxy with a path prefix
# Examples:
#   - For root deployment (e.g., https://mydomain.com/): leave empty or omit
#   - For path deployment (e.g., https://mydomain.com/sageapp04/): BASE_URL_PATH=/sageapp04
# BASE_URL_PATH=

# Application Settings
APP_TITLE=Word Document Chatbot
DEBUG_MODE=true

# Security Settings
# IMPORTANT: Do NOT enable in production - exposes API keys in logs!
# ENABLE_LITELLM_DEBUG=false

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.docx

# Docker-specific Settings
# When running in Docker, the backend service name is used
# BACKEND_URL=http://backend:8000

# AI Provider Configuration (copy from backend/.env.example or set here)
# AI_PROVIDER=openai
# OPENAI_API_KEY=your-key-here

# ===========================================================================
# SvelteKit Single-Container Deployment Configuration
# ===========================================================================

# Base URL Path Configuration
# Set this when deploying behind a reverse proxy with path prefix
# Examples:
#   - Root deployment: BASE_URL_PATH=
#   - Path deployment: BASE_URL_PATH=/sageapp04
# This is used at BUILD TIME for the Docker image
# Default: /sageapp04
BASE_URL_PATH=/sageapp04

# Backend Configuration for Single Container
# In single-container mode, frontend and backend are in same container
# Leave empty or set to root path
BACKEND_URL=

# Production Settings
ENVIRONMENT=production
DEBUG_MODE=false

# Container Port Mapping
# The container exposes port 8000 internally
# Map to host port 3004: -p 127.0.0.1:3004:8000
CONTAINER_PORT=8000
HOST_PORT=3004

# Security Settings (for production)
# Run as non-root user (automatically configured in Dockerfile)
# Health check enabled (automatic in Dockerfile)

